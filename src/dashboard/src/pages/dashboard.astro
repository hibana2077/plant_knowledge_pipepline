---
import Navbar from '../layouts/Navbar.astro';
import Joblist from '../components/Joblist.astro';
import { LineChartHero } from'../components/Line_Chart.tsx';
import { Card, Metric, Text } from '@tremor/react';
import { Divider } from '@tremor/react';
---

<!DOCTYPE html>
<html>
  <head>
	<meta charset="utf-8">
	<title>Dashboard</title>
  <link rel="icon" href="../../public/favicon.ico" type="image/x-icon">
  </head>
  <body>
	<Navbar />
    <div class="mx-auto max-w-screen-xl grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mt-6">
        <Card
        className="mx-auto max-w-xs"
        decoration="top"
        decorationColor="indigo"
        client:load
        >
            <p class="text-tremor-default text-tremor-content dark:text-dark-tremor-content">Scheduled Jobs</p>
            <p class="text-3xl text-tremor-content-strong dark:text-dark-tremor-content-strong font-semibold">30</p>
        </Card>
        <Card
        className="mx-auto max-w-xs"
        decoration="top"
        decorationColor="indigo"
        client:load
        >
            <p class="text-tremor-default text-tremor-content dark:text-dark-tremor-content">Done Jobs</p>
            <p class="text-3xl text-tremor-content-strong dark:text-dark-tremor-content-strong font-semibold">1,245</p>
        </Card>
        <Card
        className="mx-auto max-w-xs"
        decoration="top"
        decorationColor="indigo"
        client:load
        >
            <p class="text-tremor-default text-tremor-content dark:text-dark-tremor-content">Storages</p>
            <p class="text-3xl text-tremor-content-strong dark:text-dark-tremor-content-strong font-semibold">2.45 GB</p>
        </Card>
    </div>
    <Divider className='max-w-screen-xl' />
    <!-- border-emerald-200 border-2 rounded-lg -->
    <!-- title -->
      <div class="mx-auto max-w-screen-xl mt-6 px-8">
        <p class="text-2xl text-tremor-content dark:text-dark-tremor-content font-semibold">Performance</p>
      </div>
      <div class="mx-auto max-w-screen-xl mt-6 px-8">
        <LineChartHero client:visible />
      </div>
      <Divider className='max-w-screen-xl' />
      <div class="mx-auto max-w-screen-xl mt-6 px-8">
        <p class="text-2xl text-tremor-content dark:text-dark-tremor-content font-semibold">Job list</p>
      </div>
      <div class="mx-auto max-w-screen-xl mt-6 px-8">
        <div class="border-b-2 rounded-lg min-h-64 min-w-80 mx-2">
            <div class="grid grid-cols-3 bg-indigo-200 rounded-t-lg">
              <p class="text-tremor-content dark:text-dark-tremor-content font-semibold mx-auto py-2">Job Name</p>
              <p class="text-tremor-content dark:text-dark-tremor-content font-semibold mx-auto py-2">Target URL</p>
              <p class="text-tremor-content dark:text-dark-tremor-content font-semibold mx-auto py-2">Status</p>
            </div>
            <Joblist Job_name='Job 1' target_url='https://example.com/job1' status='Done' />
            <Joblist Job_name='Job 2' target_url='https://example.com/job2' status='Failed' />
            <Joblist Job_name='Job 3' target_url='https://example.com/job3' status='Running' />
        </div>
        <!-- pagenation -->
        <div class="mx-auto max-w-screen-xl mt-6 px-8">
          <div class="flex justify-center">
            <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-l">
              Prev
            </button>
            <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4">
              1
            </button>
            <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4">
              2
            </button>
            <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4">
              3
            </button>
            <button class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-r">
              Next
            </button>
          </div>
        </div>
      </div>
      <Divider className='max-w-screen-xl' />
      <div class="mx-auto max-w-screen-xl mt-6 px-8">
        <p class="text-2xl text-tremor-content dark:text-dark-tremor-content font-semibold">New Job</p>
      </div>
      <div class="mx-auto max-w-screen-xl mt-6 px-8 border-b-2">
        <div class="grid grid-cols-4 gap-4">
          <div class=" col-span-1"></div>
          <div class="border-2 rounded-lg col-span-2">
            <div class="grid grid-cols-2  rounded-t-lg">
              <p class="text-tremor-content dark:text-dark-tremor-content font-semibold mx-auto py-2">Job Name</p>
              <input type="text" class="mx-auto" />
            </div>
            <div class="grid grid-cols-2 ">
              <p class="text-tremor-content dark:text-dark-tremor-content font-semibold mx-auto py-2">Target URL</p>
              <input type="text" class="mx-auto" />
            </div>
            <div class="grid grid-cols-2 ">
              <p class="text-tremor-content dark:text-dark-tremor-content font-semibold mx-auto py-2">Method</p>
              <input type="text" class="mx-auto" />
            </div>
          </div>
          <div class=" col-span-1"></div>
        </div>
      <div class="min-h-64"></div>
    </div>
  </body>
</html>